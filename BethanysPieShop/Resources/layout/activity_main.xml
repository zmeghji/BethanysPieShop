<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/patternwide"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/logoImageView"
        android:src="@drawable/bethanylogo"
        android:layout_marginTop="10dp"
    />
    <Button
        android:text="Order Pies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderButton"
        android:backgroundTint="@color/bethanyGreen"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        />
    <Button
        android:text="View Shopping Cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewCartButton"
        android:backgroundTint="@color/bethanyGreen"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        />
<Button
        android:text="About Us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutUsButton"
        android:backgroundTint="@color/bethanyGreen"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        />
<Button
        android:text="MENU WITH TABS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuWithTabsButton"
        android:backgroundTint="@color/bethanyGreen"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        />
</LinearLayout>